<Window x:Class="FunnyGameWPF.Controls.GameSimulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameSimulation" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="4*"></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		<Label Name="InputName" Content="Введите ваше число" Grid.Row="0"></Label>
		<TextBox Name="InputNumber" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 -90 10" Grid.Row="0" BorderBrush="Blue"></TextBox>
		<Label Grid.Row="0" Name="OpponentName" Content="Число Сomputer: " Margin="10,35,174,157"></Label>
		<Label Grid.Row="0" Name="ComputerNumb" Content="" Margin="141,35,51,157"></Label>
		<Button Name="Run" Content="Run" Grid.Row="1" Click="Run_Click"></Button>
	</Grid>
</Window>
