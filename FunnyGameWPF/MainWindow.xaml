<Window x:Class="FunnyGameWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FunnyGame" Height="171.685" Width="242.123">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		
		<Label Name="UserName" Content="Имя игрока:" Grid.Row="0">
		</Label>
		<TextBox Name="InputUserName" HorizontalAlignment="Center" VerticalAlignment="Top" MinHeight="15" MaxHeight="200" MinWidth="100" MaxWidth="200" Grid.Row="0" Margin="83,0,51,0"></TextBox>
		<StackPanel Grid.Row="1">
			<RadioButton Name="OModeGame" Content="O - {1,2,3}"></RadioButton>
			<RadioButton Name="EModeGame" Content="E - {4,5,6,7,8,9}"></RadioButton>
		</StackPanel>
		<Button Name="StartGame" Content="Start" Grid.Row="2" Height="50" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartGame_Click"></Button>
	</Grid>
</Window>
