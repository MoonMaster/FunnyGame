<Window x:Class="FunnyGameWPF.Controls.SettingGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setting Game" Height="150" Width="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"></RowDefinition>
			<RowDefinition Height="50"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<Label Name="UserName" Grid.Row="0">Имя игрока:</Label>
		<TextBox Name="InputUserName" Height="20" Width="100" VerticalAlignment="Top" Margin="5 5" Grid.Row="0"></TextBox>
		<StackPanel Grid.Row="1" Name="ModeGameSettings" VerticalAlignment="Center" Margin="10 10 10 10">
			<RadioButton Name="OmodeGame">{1,2,3}</RadioButton>
			<RadioButton Name="EModeGame">{4,5,6,7,8,9}</RadioButton>
		</StackPanel>
		<StackPanel Name="NavigateButton" Grid.Row="2">
			<Button Name="StartGame" Content="Start" Width="100" HorizontalAlignment="Left" Margin="10 10 0 10" Click="StartGame_Click"></Button>
			<Button Name="Exit" Content="Exit" Width="100" HorizontalAlignment="Right" Margin="0 -30 10 10" Click="Exit_Click"></Button>
		</StackPanel>
	</Grid>
</Window>
